<body <%= data_attributes %>>

<div class="top-claim">
  <p>¿Interesado en herramientas de análisis presupuestario para Municipios? </p>
</div>

<div class="container">

  <header class="global">

    <div class="logo">
      <%= link_to_unless_current image_tag('LogoGobiertoPresupuestos.png', width: '158'), root_path %>
    </div>

    <input type="text" class="places_search search_auto" value="" placeholder="Busca municipio..." >

    <menu>
      <ul>
        <li><%= link_to 'Municipios', root_path, class: 'selected' %></li>
        <li><%= link_to 'Compara', compare_path %></li>
        <% pending do %>
          <li><%= link_to 'Rankings', '/sandbox/ranking' %></li>
        <% end %>
        <li><%= link_to '<span>Pro</span> Servicios'.html_safe %></li>
      </ul>
    </menu>

    <% pending do %>
      <div class="links_list">
        <h3>Tus favoritos</h3>
        <ul>
          <li><%= link_to 'El Ejido' %></li>
          <li><%= link_to 'Majadahonda' %></li>
          <li><%= link_to 'Mijas' %></li>
          <li><%= link_to 'Talaván' %></li>
        </ul>
      </div>
    <% end %>

    <div class="links_list">
      <h3>Reciente</h3>
      <ul id="history">
      </ul>
    </div>

  </header>

  <div class="switcher year_switcher">
    <% if @place || @places %>
      <%= link_to "#{@year} <i class='fa fa-angle-down'></i>".html_safe, '', class: 'current' %>
      <ul>
        <li><%= link_to '2015', request.path.sub(/\d{4}/,'2015') %></li>
        <li><%= link_to '2014', request.path.sub(/\d{4}/,'2014') %></li>
        <li><%= link_to '2013', request.path.sub(/\d{4}/,'2013') %></li>
        <li><%= link_to '2012', request.path.sub(/\d{4}/,'2012') %></li>
        <li><%= link_to '2011', request.path.sub(/\d{4}/,'2011') %></li>
        <li><%= link_to '2010', request.path.sub(/\d{4}/,'2010') %></li>
      </ul>
    <% end %>
  </div>

  <div class="main_content clearfix">
    <%= yield %>
  </div>

</div>

<footer>
  <div class="gobierto_ref">
    <%= link_to image_tag('GobiertoFooter@2x.png', size: '401x18'), 'http://gobierto.es', target: 'blank' %>
  </div>

  <menu>
    <ul>
      <li><%= link_to 'Acerca de', about_path %></li>
      <li><%= link_to 'Metodología y Fuentes', about_path(anchor: 'method') %></li>
    </ul>
  </menu>
</footer>


