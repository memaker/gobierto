<body <%= data_attributes %>>

<div class="top-claim">
  <p><a href="/about#municipalities">¿Interesado en herramientas de análisis presupuestario para Municipios?</a></p>
</div>

<div class="container">

  <header class="global">

    <div class="logo">
      <%= link_to_unless_current image_tag('LogoGobiertoPresupuestos.png', width: '158'), root_path %>
    </div>

    <div class="resp ham">
      <%= link_to '<i class="fa fa-bars"></i>'.html_safe, '' %>
    </div>

    <div class="desktop">

      <input type="text" class="places_search search_auto" value="" placeholder="Busca municipio..." >

      <menu>
        <ul>
          <li><%= link_to 'Municipios', root_path, class: 'selected' %></li>
          <li><%= link_to 'Compara', compare_path %></li>
          <% pending do %>
            <li><%= link_to 'Rankings', '/sandbox/ranking' %></li>
          <% end %>
          <li><%= link_to 'Servicios', about_path(anchor: 'municipalities') %></li>
        </ul>
      </menu>

      <% if logged_in? %>
      <div class="links_list personal_links">
        <p>Hola <strong><%= current_user.full_name %></strong></p>
        <% if current_user.place_id %>
          <p>Tu municipio: <%= link_to INE::Places::Place.find(current_user.place_id).name, place_path(INE::Places::Place.find(current_user.place_id), year: 2015) %></p>
        <% end %>
        <p><%= link_to 'Editar datos personales', edit_user_path %></p>
        <p><%= link_to 'Cerrar sesión', logout_path, method: :delete, class: 'logout' %></p>
      </div>
      <% end %>


      <% pending do %>
        <div class="links_list">
          <h3>Tus favoritos</h3>
          <ul>
            <li><%= link_to 'El Ejido' %></li>
            <li><%= link_to 'Majadahonda' %></li>
            <li><%= link_to 'Mijas' %></li>
            <li><%= link_to 'Talaván' %></li>
          </ul>
        </div>
      <% end %>

      <div class="links_list">
        <h3>Municipios recientes</h3>
        <ul id="history">
        </ul>
      </div>

      <div class="links_list">
        <h3>Comparaciones recientes</h3>
        <ul id="comparisons-history">
        </ul>
      </div>

    </div>

  </header>

  <% # Responsive related: pending to see if we change de year selector to the breadcrumb %>
  <div class="switcher year_switcher desktop">
    <% if @place || @places %>
      <%= link_to "#{@year} <i class='fa fa-angle-down'></i>".html_safe, '', class: 'current' %>
      <ul>
        <li><%= link_to '2015', url_for(params.reject {|k,v| k == 'page' }.merge(year: 2015)) %></li>
        <li><%= link_to '2014', url_for(params.reject {|k,v| k == 'page' }.merge(year: 2014)) %></li>
        <li><%= link_to '2013', url_for(params.reject {|k,v| k == 'page' }.merge(year: 2013)) %></li>
        <li><%= link_to '2012', url_for(params.reject {|k,v| k == 'page' }.merge(year: 2012)) %></li>
        <li><%= link_to '2011', url_for(params.reject {|k,v| k == 'page' }.merge(year: 2011)) %></li>
        <li><%= link_to '2010', url_for(params.reject {|k,v| k == 'page' }.merge(year: 2011)) %></li>
      </ul>
    <% end %>
  </div>

  <div class="main_content clearfix">
    <%= yield %>
  </div>

</div>

<footer>
  <div class="gobierto_ref">
    <%= link_to image_tag('GobiertoFooter@2x.png', size: '401x18'), 'http://gobierto.es', target: 'blank' %>
  </div>

  <menu>
    <ul>
      <li><%= link_to 'Acerca de', about_path %></li>
      <li><%= link_to 'Preguntas frecuentes', faq_path %></li>
      <li><%= link_to 'Metodología y Fuentes', about_path(anchor: 'method') %></li>
      <li><%= link_to 'Contacto', about_path(anchor: 'contact') %></li>
    </ul>
  </menu>
</footer>


