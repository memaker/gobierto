<h3 class="lite">Partidas destacadas</h3>

<div class="cont clearfix">
  <div class="main">
    <header>
      ¿Cuánto se gasta <%= @place.name %> en...
      <h2><%= link_to budget_line_denomination(@area_name, @code, @kind), gobierto_budgets_budget_line_path(@place.slug, @year, @code.parameterize, @kind, @area_name) %>?</h2>
    </header>

    <div class="main_metrics clearfix">
      <div class="metric tipsit" data-widget-template="#widget-template"
                                 title="<%= kind_literal(@kind, false).humanize %> total de esta partida en este año por habitante"
                                 data-widget-type="per_person"
                                 data-widget-data-url="<%= gobierto_budgets_api_data_budget_per_inhabitant_path(ine_code: @place.id, year: @year, kind: @kind, code: @code.parameterize, area: @area_name, format: :json) %>">
      </div>

      <div class="metric tipsit" data-widget-template="#widget-template"
                                 title="<%= kind_literal(@kind, false).humanize %> total de esta partida en este año"
                                 data-widget-type="budget"
                                 data-widget-data-url="<%= gobierto_budgets_api_data_budget_path(ine_code: @place.id, year: @year, kind: @kind, code: @code.parameterize, area: @area_name, format: :json) %>">
      </div>

      <div class="metric tipsit" data-widget-template="#small-widget-template"
                                 title="Porcentaje sobre el total"
                                 data-widget-type="budget_percentage_over_total"
                                 data-widget-data-url="<%= gobierto_budgets_api_data_budget_percentage_over_total_path(ine_code: @place.id, year: @year, kind: @kind, code: @code.parameterize, area: @area_name, format: :json) %>">
      </div>
    </div>
  </div>

  <div class="act">
    <header>
      <div>¿Entiendes de qué va esta partida?</div>
      <div>¿Te parece mucho, poco?</div>
    </header>

    <%= link_to 'Levanta la mano: opina', '', class: 'button user', data: {feedback: true} %>
  </div>
</div>

<%= link_to 'Enséñame otra', gobierto_budgets_featured_budget_line_path(id: @place.slug, year: @year), class: 'show_me_another', remote: true %>

<%= render partial: 'gobierto_budgets/budget_lines/feedback' %>

<script type="text/html" id="widget-template">
  <div class="label">{{title}}</div>
  <div class="main {{sign}}">{{value}}</div>
  <div class="secondary">
    <div class="percentage_change up {{sign}}">{{delta_percentage}}%</div>
    <div class="ranking"><a href="{{ranking_url}}" class="ranking_link"><strong>#{{ranking_position}}</strong>/{{ranking_total_elements}}</a></div>
  </div>
</script>

<script type="text/html" id="small-widget-template">
  <div class="label">{{title}}</div>
  <div class="main {{sign}}">{{value}}</div>
  <div class="secondary">
  </div>
</script>

<script type="text/html" id="widget-template-no-ranking">
  <div class="label">{{title}}</div>
  <div class="main {{sign}}">{{delta_percentage}} %</div>
  <div class="secondary">
    <div class="percentage_change up {{sign}}">{{value}}</div>
  </div>
</script>

