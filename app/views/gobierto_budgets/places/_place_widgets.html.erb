<div class="main_metrics clearfix">

  <div class="metric"
    data-widget-template="#widget-template"
    data-widget-type="per_person"
    data-line-widget-series="means"
    data-line-widget-url="<%= gobierto_budgets_api_data_lines_path(ine_code: @place.id, year: @year, what: 'per_person', format: :json) %>"
    data-line-widget-type="per_person"
    data-widget-data-url="<%= gobierto_budgets_api_data_total_budget_per_inhabitant_path(ine_code: @place.id, year: @year, format: :json) %>"
    data-page-href="<%= gobierto_budgets_place_path(slug: @place.slug, year: @year, anchor: 'per_person')%>">
  </div>

  <div class="metric"
    data-widget-template="#widget-template"
    data-widget-type="total_budget"
    data-line-widget-series="means"
    data-line-widget-url="<%= gobierto_budgets_api_data_lines_path(ine_code: @place.id, year: @year, what: 'total_budget', format: :json) %>"
    data-line-widget-type="total_budget"
    data-widget-data-url="<%= gobierto_budgets_api_data_total_budget_path(ine_code: @place.id, year: @year, format: :json) %>"
    data-page-href="<%= gobierto_budgets_place_path(slug: @place.slug, year: @year, anchor: 'total_budget')%>">
  </div>

  <div class="metric tipsit" title="La diferencia entre los gastos planeados (Presupuesto) y lo que finalmente se ha gastado (Ejecutado). Haz click para ver detalle y tambiÃ©n la ejecuciÃ³n de los ingresos"
    data-widget-template="#widget-template-execution"
    data-widget-type="total_budget_execution"
    data-widget-data-url="<%= gobierto_budgets_api_data_total_budget_execution_path(ine_code: @place.id, year: @year, format: :json) %>"
    data-page-href="<%= gobierto_budgets_place_execution_path(slug: @place.slug, year: @year, anchor: 'total_budget_execution')%>">
  </div>

  <div class="metric"
    data-widget-template="#widget-template"
    data-widget-type="population"
    data-widget-data-url="<%= gobierto_budgets_api_data_population_path(ine_code: @place.id, year: @year, format: :json) %>">
  </div>

  <div class="metric"
    data-widget-template="#widget-template-debt"
    data-widget-type="debt"
    data-widget-data-url="<%= gobierto_budgets_api_data_debt_path(ine_code: @place.id, year: @year, format: :json) %>">
  </div>
</div>


