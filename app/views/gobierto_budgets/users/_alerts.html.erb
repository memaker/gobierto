<% if @user.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      <p>El formulario tiene <%= pluralize(@user.errors.count, "error") %>:</p>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
