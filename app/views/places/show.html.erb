    <header class="cat">
      <h2>Ingresos</h2>
      <div class="qty"><%= number_to_currency @budget_lines['aggregations']['total_budget']['value'], precision: 0 %></div>
    </header>

    <div class="graph">TREEMAP</div>

    <div class="items">
      <table>
