<div class="switcher year_switcher">
    <%= link_to "#{@year} <i class='fa fa-angle-down'></i>".html_safe, '', class: 'current' %>
    <ul>
      <% 2015.downto(2010) do |y| %>
        <li><%= link_to y.to_s, url_for(params.reject {|k,v| k == 'page' }.merge(year: y)) %></li>
      <% end %>
    </ul>
</div>