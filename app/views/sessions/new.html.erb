<div class="cont clearfix">
  <%= flush_the_flash %>

  <div class="form clearfix">

    <h1>Iniciar sesión</h1>

    <%= form_for :session, url: sessions_path do |f| %>
      <div class="form_item">
        <div class="form_item_cont">
          <%= f.label :email, 'Email' %>
          <%= f.email_field :email, class: 'i_text', autofocus: true %>
        </div>
      </div>

      <div class="form_item">
        <div class="form_item_cont">
          <%= f.label :password, 'Contraseña' %>
          <%= f.password_field :password, class: 'i_text' %>
        </div>
      </div>

      <div class="form_item full submit_item">
        <div class="form_item_cont clearfix">
          <div class="conditions">
            <%= link_to 'Recuperar contraseña', new_password_reset_path %>
          </div>
          <%= hidden_field_tag :back_url, request.referer %>
          <input type="submit" class="submit" value="Enviar">
        </div>
      </div>
    <% end %>
  </div>
</div>
