<header class="main_h ">
  <div class="cont clearfix">
    <%= render 'layouts/admin_header' %>
  </div>
</header>

<div class="cont clearfix">

  <h2><%= t('gobierto_cms.all_the_pages') %></h2>

  <div class="main">
    <%= flush_the_flash %>

    <% if @site.gobierto_cms_pages.count == 0 %>
      <p><%= t('gobierto_cms.no_pages') %></p>
      <p><%= link_to t('gobierto_cms.create_the_first_page'), new_admin_gobierto_cms_page_path %></p>
    <% else %>
      <ul class="sortable pages">
        <% @site.gobierto_cms_pages.root.each do |page| %>
          <li id="page_<%= page.id %>">
            <%= render partial: 'admin/gobierto_cms/pages/page', locals: {page: page} %>
            <%= render_children_pages(page) %>
          </li>
        <% end %>
      </ul>
    <% end %>
  </div>

  <div class="sidebar">
    <%= link_to t('actions.create'), new_admin_gobierto_cms_page_path, class: 'submit_button' %>
  </div>

</div>
