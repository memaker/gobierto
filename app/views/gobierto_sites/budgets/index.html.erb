<div class="main_metrics clearfix">
  <div class="metric selected"
    data-widget-template="#widget-template"
    data-widget-type="per_person"
    data-line-widget-series="means"
    data-line-widget-url="<%= gobierto_budgets_api_data_lines_url(ine_code: @place.id, year: @year, what: 'per_person', format: :json, host: Site.budgets_host) %>"
    data-line-widget-type="per_person"
    data-widget-data-url="<%= gobierto_budgets_api_data_total_budget_per_inhabitant_url(ine_code: @place.id, year: @year, format: :json, host: Site.budgets_host) %>">
  </div>

  <div class="metric"
    data-widget-template="#widget-template"
    data-widget-type="total_budget"
    data-line-widget-series="means"
    data-line-widget-url="<%= gobierto_budgets_api_data_lines_url(ine_code: @place.id, year: @year, what: 'total_budget', format: :json, host: Site.budgets_host) %>"
    data-line-widget-type="total_budget"
    data-widget-data-url="<%= gobierto_budgets_api_data_total_budget_url(ine_code: @place.id, year: @year, format: :json, host: Site.budgets_host) %>">
  </div>

  <div class="metric"
    data-widget-template="#widget-template"
    data-widget-type="population"
    data-widget-data-url="<%= gobierto_budgets_api_data_population_url(ine_code: @place.id, year: @year, format: :json, host: Site.budgets_host) %>">
  </div>

  <div class="metric"
    data-widget-template="#widget-template-execution"
    data-widget-type="total_budget_execution"
    data-widget-data-url="<%= gobierto_budgets_api_data_total_budget_execution_url(ine_code: @place.id, year: @year, format: :json, host: Site.budgets_host) %>">
  </div>

  <div class="metric"
    data-widget-template="#widget-template-debt"
    data-widget-type="debt"
    data-widget-data-url="<%= gobierto_budgets_api_data_debt_url(ine_code: @place.id, year: @year, format: :json, host: Site.budgets_host) %>">
  </div>
</div>

<%= render partial: 'shared/widget_template' %>
<%= render partial: 'shared/widget_template_execution' %>
<%= render partial: 'shared/widget_template_debt' %>

